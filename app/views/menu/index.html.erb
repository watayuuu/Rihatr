
<%# ヘッダー %>
<%= render "shared/header" %>
<%# サイドバー %>
<%= render "menu/side" %>
<div class="main_menu">
<%# 自主トレフォーム %>
  <div class="create-menu">
    <%= form_with url: preview_menu_index_path,method: :post,local: true do |f| %>
    <div class ="form">
      <%= f.submit(class:"menu_btn",value:"作成")%>
    <div class ="menu_form"><%=f.text_field :name , class:"name_form",placeholder:"利用者名を入力",autocomplete: 'off'%></div>
      <%=f.hidden_field :tid,  id:"tid"%>
      <%=f.hidden_field :tid1, id:"tid1"%>
      <%=f.hidden_field :tid2, id:"tid2"%>
      <%=f.hidden_field :tid3, id:"tid3"%>
    
    </div>


    <div class="menu-edit" >
      <div class="number_frequency">
        <div class ="not_editer">
            <div class="menu_number">回数</div>
            <%=f.text_field :number ,class:"number_select",value:"10",type:"number",min:"1"%>
            <div class="number_times">回</div>
            <div class="menu_frequency">頻度</div>
            <%= f.text_field  :frequency_select, id: "frequency_select", class: "frequency_select",value:"3",type:"number" ,min:"1" %>
            <div class="set_count">セット</div>
        </div>
        <div class= "menu-editor"></div>
      </div>
          <div class="number_frequency">
        <div class ="not_editer">
            <div class="menu_number">回数</div>
            <%=f.text_field :number1 ,class:"number_select",value:"10",type:"number",min:"1"%>
            <div class="number_times">回</div>
            <div class="menu_frequency">頻度</div>
            <%= f.text_field  :frequency_select1, id: "frequency_select", class: "frequency_select",value:"3",type:"number" ,min:"1" %>
            <div class="set_count">セット</div>
        </div>
        <div class= "menu-editor"></div>
      </div>
          <div class="number_frequency">
        <div class ="not_editer">
            <div class="menu_number">回数</div>
            <%=f.text_field :number2 ,class:"number_select",value:"10",type:"number",min:"1"%>
            <div class="number_times">回</div>
            <div class="menu_frequency">頻度</div>
            <%= f.text_field  :frequency_select2, id: "frequency_select", class: "frequency_select",value:"3",type:"number" ,min:"1" %>
            <div class="set_count">セット</div>
        </div>
        <div class= "menu-editor"></div>
      </div>
      <div class="number_frequency">
        <div class ="not_editer">
            <div class="menu_number">回数</div>
            <%=f.text_field :number3 ,class:"number_select",value:"10",type:"number",min:"1"%>
            <div class="number_times">回</div>
            <div class="menu_frequency">頻度</div>
            <%= f.text_field  :frequency_select3, id: "frequency_select", class: "frequency_select",value:"3",type:"number" ,min:"1" %>
            <div class="set_count">セット</div>
        </div>
        <div class= "menu-editor"></div>
      </div>
    </div>
    
    <% end %>
  </div >

  <%# 自主トレ一覧 %>
  <div class="training-all">
    <div class ="count_index">
      <div class ="display_list"><%= @counts%></div>
      <div class ="display_counts"><%= "件表示/#{@counts}件中"%></div>
    </div>
    <div class="training">
      <% @training.each do |training| %>
        <div class = "training_list">
            <div class="training_title">
              <%= training.training_title%>
            </div>
            <%= link_to menu_path(training.id), remote: true do  %>
            <div class = "training_image" draggable="true" >
              <%=image_tag training.image4,data:{tid:training.id} ,class:"training_img"%>
            </div>
          <% end%>
            <div class ="training_information">
              <%= check_box_tag :invalid_flag, value = "stretch", training.stretch ,disabled:"disabled",class:"invalid_flag",type:"hidden"%>
              <%= check_box_tag :invalid_flag, value = "muscle_training", training.muscle_training ,disabled:"disabled",class:"invalid_flag",type:"hidden"%>
              <%= check_box_tag :invalid_flag, value = "stability", training.stability ,disabled:"disabled",class:"invalid_flag",type:"hidden"%>
            </div> 
            <button type="button" class="addbutton" >追加する</button>

        </div>
      <% end %>
    </div>
  </div>
</div>


<%# 詳細ページのモーダル %>
  <div id="mask" class="hidden"></div>
  <div id="modal" class="hidden">
    <p>モーダルウィンドウ<p>
  </div>



<%= form_with model: @training,url: menu_index_path, method: :post, local: true do |f|%>
    <div class="individual">
  <div class="training-information">
    <div class="title">
      <div class="form_training-title">
        自主トレーニングメニュー名
         <%= f.text_field :training_title,  placeholder:"自主トレーニングタイトルを入力", maxlength:"40",class:"menu_title_form" %>
        
      </div>
     
    </div>
    <div class="mascle-information">
      <%# <div>対象筋の画像を挿入してください</div> %>
      <%= f.file_field :image %>
      <%# プレビュー画面のコード %>
      <div id="image-list"></div>
      <%# --------------------------- %>
      <div class="information">
       <div class="mascle-name">
          対象筋:<%= f.text_field :mascle_name,  placeholder:"対象の部位を入力", maxlength:"40" %>
       </div>
       <div class="explanation">
          作用:<%= f.text_area :explanation,  placeholder:"筋肉の作用やトレーニング効果を入力", maxlength:"40" %>
       </div>

      <%# フィルター %>
       <div class = "filter_form">
        <div class="joint_filter">運動部位フィルター</div>
          <ul>上肢
            <li><%= f.check_box :shoulder %>肩関節</li>
            <li><%= f.check_box :elbow %>肘関節</li>
            <li><%= f.check_box :hand_fingers %>手関節・手指</li>
          </ul>
          <ul>下肢
            <li><%= f.check_box :hip %>股関節</li>
            <li><%= f.check_box :knee %>膝関節</li>
            <li><%= f.check_box :ankle %>足関節</li>
          </ul>
          <ul>体幹
            <li><%= f.check_box :front_trank %>体幹前面</li>
            <li><%= f.check_box :back_trank %>体幹後面</li>
            <li><%= f.check_box :composite %>複合・その他</li>
          </ul>
           <ul>運動肢位
              <li><%= f.check_box :supine %>背臥位</li>
              <li><%= f.check_box :prone %>腹臥位</li>
              <li><%= f.check_box :lateral %>側臥位</li>
              <li><%= f.check_box :sitting %>座位</li>
              <li><%= f.check_box :standing %>立位</li>
              <li><%= f.check_box :fours %>四つ這い</li>
          </ul>
          <ul>運動方法
              <li><%= f.check_box :stretch %>ストレッチ</li>
              <li><%= f.check_box :muscle_training %>筋トレ</li>
              <li><%= f.check_box :stability %>スタビリティ</li>     
          </ul>

       </div>
      </div>
      
  </div>
  <%# 自主トレフローチャート %>
  <div class="training-detail">
    <ul class="flow">
     <li>
       <span class="icon">STEP.01</span>
       <dl>
         <dt>   
            <%= f.file_field :image1 %>
             <%# プレビュー画面のコード %>
            <div id="image-list1"></div>
             <%# --------------------------- %>
             
         </dt>
          <%= f.text_area :step1_comment,  placeholder:"肢位や運動の注意点を記載",maxlength:"1000" %>
        </dl>
     </li>

  <li>
    <span class="icon">STEP.02</span>
    <dl>
      <dt>     
        <%= f.file_field :image2%>
         <%# プレビュー画面のコード %>
            <div id="image-list2"></div>
             <%# --------------------------- %>
      </dt>
      <%= f.text_area :step2_comment,  placeholder:"肢位や運動の注意点を記載",maxlength:"1000" %>
    </dl>
  </li>

  <li>
    <span class="icon">STEP.03</span>
    <dl>
      <dt>   
        <%= f.file_field :image3%>
         <%# プレビュー画面のコード %>
            <div id="image-list3"></div>
             <%# --------------------------- %>
      </dt>
      <%= f.text_area :step3_comment,  placeholder:"肢位や運動の注意点を記載",maxlength:"1000" %>
    </dl>
  </li>

  <li>
    <dl>
      <dt><span class="icon">STEP.04</span>
      <dt>   
        <%= f.file_field :image4%>
         <%# プレビュー画面のコード %>
            <div id="image-list4"></div>
             <%# --------------------------- %>
      </dt>
      <%= f.text_area :step4_comment,  placeholder:"肢位や運動の注意点を記載",maxlength:"1000" %>
    </dl>
  </li>
</ul>
  </div>
</div>

 

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>


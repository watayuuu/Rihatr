<%= render "shared/header" %>
<%= form_with model:@user, url: new_user_session_path,class: 'login-main', local: true do |f| %>
  <div class='login-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        ログイン
      </h1>
    </div>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ログインID</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
    </div>
    <div class="form-group">
      <h2 class='form-bottom-text'>
        ユーザー登録されていない方は
        
        <span><%= link_to 'こちら', new_user_session_path%></span>
      </h2>
    </div>
    <div class='login-btn'>
      <%= f.submit "ログイン" ,class:"login-red-btn" %>
    </div>
  </div>
<% end %>
